{
	"name": "create-noderize",
	"description": "Create a Node app in less than 30 seconds.",
	"author": "Charles Crete <charles@cretezy.com>",
	"homepage":
		"https://github.com/Cretezy/Noderize/tree/master/packages/create-noderize",
	"repository": {
		"type": "git",
		"url": "https://github.com/Cretezy/Noderize.git"
	},
	"version": "0.3.8",
	"license": "MIT",
	"bin": "dist/index.js",
	"files": ["src", "dist", "template"],
	"scripts": {
		"noderize-scripts": "node ../noderize-scripts/dist/index.js",
		"watch": "npm run noderize-scripts -- watch",
		"build": "npm run noderize-scripts -- build",
		"start": "npm run noderize-scripts -- start",
		"format": "npm run noderize-scripts -- format",
		"test": "npm run noderize-scripts -- test",
		"clean": "npm run noderize-scripts -- clean",
		"prepack": "npm run clean && npm run build --env production"
	},
	"dependencies": {
		"chalk": "^2.3.1",
		"fs-extra": "^5.0.0",
		"minimist": "^1.2.0"
	}
}
